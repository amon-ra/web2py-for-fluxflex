    {{=form.custom.begin}}
       
        <div class="{{='control-group error' if form.errors else ''}}">
            <label>{{=form.custom.label.board_text}}</label>
            <input type="text" placeholder="Type somethingâ€¦" name="board_text" id="user_board_board_text" class="string span12">
        </div>
